{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-turma3-imersao"
		},
		"ls_azure_sql_powerquery_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ls_azure_sql_powerquery'"
		},
		"ls_azure_sql_properties_typeProperties_connectionString_secretName": {
			"type": "string",
			"defaultValue": "secret-db-azure"
		},
		"ls_data_lake_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dlsturma3imersao.dfs.core.windows.net"
		},
		"ls_file_system_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\adf"
		},
		"ls_file_system_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "adf_user"
		},
		"ls_http_api_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://api.nytimes.com/svc/movies/v2/"
		},
		"ls_key_vault_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://kv-turma3-imersao.vault.azure.net/"
		},
		"ls_sql_local_properties_typeProperties_connectionString_secretName": {
			"type": "string",
			"defaultValue": "secret-db-local"
		},
		"TR_3_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/8ce334f5-c44c-4bb4-9ad5-c5905c1945da/resourceGroups/rg-turma3-imersao/providers/Microsoft.Storage/storageAccounts/dlsturma3imersao"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-turma3-imersao_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_azure_sql_powerquery_connectionString": {
						"value": "[parameters('ls_azure_sql_powerquery_connectionString')]"
					},
					"ls_http_api_properties_typeProperties_url": {
						"value": "[parameters('ls_http_api_properties_typeProperties_url')]"
					},
					"ls_key_vault_properties_typeProperties_baseUrl": {
						"value": "[parameters('ls_key_vault_properties_typeProperties_baseUrl')]"
					},
					"ls_azure_sql_properties_typeProperties_connectionString_secretName": {
						"value": "[parameters('ls_azure_sql_properties_typeProperties_connectionString_secretName')]"
					},
					"ls_data_lake_properties_typeProperties_url": {
						"value": "[parameters('ls_data_lake_properties_typeProperties_url')]"
					},
					"ls_file_system_properties_typeProperties_host": {
						"value": "[parameters('ls_file_system_properties_typeProperties_host')]"
					},
					"ls_file_system_properties_typeProperties_userId": {
						"value": "[parameters('ls_file_system_properties_typeProperties_userId')]"
					},
					"ls_sql_local_properties_typeProperties_connectionString_secretName": {
						"value": "[parameters('ls_sql_local_properties_typeProperties_connectionString_secretName')]"
					},
					"TR_3_properties_typeProperties_scope": {
						"value": "[parameters('TR_3_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "adf-turma3-imersao_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'adf-turma3-imersao_ArmTemplate_0')]"
			]
		}
	]
}